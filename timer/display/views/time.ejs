<!-- time.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <title>Time Display and Data Entry</title>
</head>
<script>
    // Function to toggle dark mode
    function toggleTheme() {
        document.body.classList.toggle('dark-mode');
        localStorage.setItem('theme', document.body.classList.contains('dark-mode') ? 'dark' : 'light');
    }

    // Apply the saved theme on page load
    window.onload = () => {
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
        }
    };
</script>
<body>
    <div class="theme-toggle">
        <button onclick="toggleTheme()">Toggle Dark/Light Mode</button>
    </div>
    
    <h1>Time Display</h1>
    <p>Cloud Time: <%= new Date(cloudTime).toLocaleString("en-US") %> - Timezone: UTC</p>
    <p>Local Computer Time: <%= new Date(localTime).toLocaleString("en-US") %> - Timezone: <%= Intl.DateTimeFormat().resolvedOptions().timeZone %></p>

</body>
</html>